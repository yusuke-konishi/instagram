<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :caption %>
  <%= f.text_field :caption %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "写真一覧画面にもどる", pictures_path %>
